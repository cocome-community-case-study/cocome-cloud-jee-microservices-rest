% Strichmännchen
% #1 = Name des Nodes
% #2 = Position
% #3 = Stil

\newcommand{\umlhuman}[3]{
\node[circle, draw, yshift=1.25em, #3] (#1_head) #2 {};
\draw[#3] (#1_head.south) -- ++ (0,-1.5em) -- ++ (1em,-1em) node[inner sep=0em] (#1_rightfoot) {};
\draw[#3] (#1_head.south) ++ (0,-1.5em) -- ++ (-1em,-1em) node[inner sep=0em] (#1_leftfoot) {};
\draw[#3] (#1_head.south) ++ (0,-.6em) -- ++ (1em,.4em) node[inner sep=0em] (#1_righthand) {};
\draw[#3] (#1_head.south) ++ (0,-.6em) -- ++ (-1em,.4em) node[inner sep=0em] (#1_lefthand) {};
}

% Strichmännchen im Kasten
\newcommand{\umlboxedhuman}[4]{
\umlhuman{#1}{#2}{#3}
\node[rectangle, draw, fit=(#1_head) (#1_leftfoot) (#1_rightfoot), #4] (#1) {};
}